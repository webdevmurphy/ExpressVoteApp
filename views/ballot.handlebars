<font face= "verdana" color= "White">
<body background = "/images/olive.png">   

<h2>
<p>Your Voter ID#: {{voterId}}</p>
<p>Your Precinct: {{district}}</p>
</h2>

<form method = "post" action = "/vote">
<input type ="hidden" name="voterId" value = "{{voterId}}"/>
<input type ="hidden" name="district" value = "{{district}}"/>

{{#each races}}</br>
<fieldset>
    <legend>{{office}}</legend>
    {{#each candidates}}
    <input type = "radio" id ="{{../id}}" name ="{{../id }}" value = "{{name}}"/>
    <label for ="{{../id}}">
        {{name}}
        {{#if party}} {{party}} {{/if}}</label><br/>
    {{/each}}
</fieldset>
{{/each}}
<center><h1><input type="submit" value="Submit"></h1></center>
</form>    

</body></font>





